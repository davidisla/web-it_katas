{
    "description": "Password validator kata",
    "type": "project",
    "license": "MIT",
    "keywords": ["php", "kata"],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.2",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.13",
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "autoload": {
        "psr-4": {
            "Kata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KataTests\\": "tests/"
        }
    },
    "scripts": {
        "test-all": [
            "@psalm",
            "@test-unit"
        ],
        "test-unit": "./vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html coverage",
        "psalm": "./vendor/bin/psalm"
    }
}
